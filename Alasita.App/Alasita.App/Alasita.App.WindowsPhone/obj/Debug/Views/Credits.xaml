<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Alasita.App.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ViewModel="using:Alasita.App.ViewModel"
    x:Class="Alasita.App.Views.Credits"
    mc:Ignorable="d"
    Background="LightGray"
    RequestedTheme="Light">

    <Page.DataContext>
        <ViewModel:CreditsVM/>
    </Page.DataContext>

    <Grid x:Name="LayoutRoot">

        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition/>
            </TransitionCollection>
        </Grid.ChildrenTransitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Background="#FFFFBF01" Margin="0,-30,0,0" Height="90" VerticalAlignment="Top"/>
        <!-- TitlePanel -->
        <TextBlock Text="Creditos" Typography.Capitals="SmallCaps" FontSize="33" Margin="20,10" Foreground="White"/>

        <!--TODO: Content should be placed within the following grid-->
        <Grid Grid.Row="1" x:Name="ContentRoot">
            <ListView ItemsSource="{Binding Creditos}" Margin="25,10">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,5">
                            <Ellipse Height="15" Width="15" Fill="#FFFFBF00" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,5,0,0"/>
                            <TextBlock Text="{Binding}" Typography.Capitals="SmallCaps" FontWeight="Bold" Margin="25,0" TextWrapping="WrapWholeWords" FontSize="18"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </Grid>
</Page>

