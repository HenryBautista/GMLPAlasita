<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context="com.alasitaappdroid.CreditActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:scaleType="fitCenter"
            android:src="@drawable/alcaldia"/>

        <TextView
            style="@style/Credit"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Promotores:"/>

        <TextView
            style="@style/Credit"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="GOBIERNO AUTONOMO MUNICIPAL DE LA PAZ"/>

        <TextView
            style="@style/Credit"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="SECRETARIA MUNICIPAL DE PROMOCIÓN ECONÓMICA"/>

        <TextView
            style="@style/Credit"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="DIRECCIÓN DE COMPETITIVIDAD Y EMPRENDIMIENTO"/>

        <TextView
            style="@style/Credit"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="UNIDAD DE FORTALECIMIENTO PRODUCTIVO"/>

        <TextView
            style="@style/Credit"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="PROGRAMA DE INNOVACIÓN Y MEJORA COMPETITIVA PARA MIPYME"/>

        <TextView
            style="@style/Credit"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:text="CON EL APOYO DE  LA UNIÓN EUROPEA"/>

        <ImageView
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/ue"/>

        <TextView

            style="@style/Credit"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:text="Desarrollado por"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/msp"/>

        <TextView
            style="@style/Credit"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:text="mspsbolivia@outlook.com"/>


    </LinearLayout>
</ScrollView>