<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="SectorFragment">
        <item name="android:typeface">sans</item>
    </style>

    <style name="SectorFragment.Sub">
        <item name="android:paddingTop">2.5dp</item>
        <item name="android:paddingBottom">2.5dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:layout_marginTop">2.5dp</item>
        <item name="android:layout_marginBottom">2.5dp</item>
    </style>

    <style name="SectorFragment.SectorKeyStyle">
        <item name="android:background">#33b5e5</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
    </style>

    <style name="SectorFragment.Sub.SectorNameStyle">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="SectorFragment.Sub.SectorDescriptionStyle">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="SectorFragment.Sub.SectorAssociationsStyle">
        <item name="android:textSize">15sp</item>
    </style>


    <!--Adapter Association-->
    <style name="AssociationAdapter">
        <item name="android:typeface">sans</item>
    </style>

    <style name="AssociationAdapter.AssociationNameStyle">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="AssociationAdapter.AssociationInfoStyle">
        <item name="android:textSize">15sp</item>
    </style>
</resources>
